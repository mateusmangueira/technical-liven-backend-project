generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGO_URL")
}

model User {
  id       String    @id @default(auto()) @map("_id") @db.ObjectId
  email    String    @unique
  name     String
  password String
  address  Address[]
}

model Address {
  id            String @id @default(auto()) @map("_id") @db.ObjectId
  street        String
  street_number String
  neighborhood  String
  city          String
  state         String
  country       String
  postCode      String @unique
  user          User   @relation(fields: [userId], references: [id])
  userId        String @db.ObjectId

  @@map("address")
}
